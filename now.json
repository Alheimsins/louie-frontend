{
  "version": 2,
  "name": "louie-frontend",
  "scope": "alheimsins",
  "alias": "frontend.louie.alheimsins.net",
  "builds": [
    {
      "src": "package.json",
      "use": "@now/static-build"
    }
  ],
  "build": {
    "env": {
      "VUE_APP_LOUIE_PROD_URL": "https://frontend.louie.alheimsins.net"
    }
  },
  "routes": [
    { "src": "^/manifest.json", "dest": "/manifest.json" },
    { "src": "^/browserconfig.xml", "dest": "/browserconfig.xml" },
    { "src": "^/precache-manifest.(.*)", "dest": "/precache-manifest.$1" },
    { "src": "^/service-worker.js", "headers": {"cache-control": "s-maxage=0"}, "dest": "/service-worker.js" },
    { "src": "^/(.*).worker.js", "dest": "/$1.worker.js" },
    { "src": "^/(.*).worker.js.map", "dest": "/$1.worker.js.map" },
    { "src": "^/robots.txt", "dest": "/robots.txt" },
    { "src": "^/favicon.ico", "dest": "/favicon.ico" },
    { "src": "^/js/(.*)", "dest": "/js/$1" },
    { "src": "^/css/(.*)", "dest": "/css/$1" },
    { "src": "^/img/(.*)", "dest": "/img/$1" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
